apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: alloy-agent
  namespace: alloy-system
spec:
  template:
    spec:
      containers:
        - name: alloy
          env:
            - name: MIMIR_ENDPOINT
              value: "MONITORING_CLUSTER_IP:30091"
            - name: LOKI_ENDPOINT
              value: "MONITORING_CLUSTER_IP:30101"
            - name: TEMPO_ENDPOINT
              value: "MONITORING_CLUSTER_IP:30201"
            - name: ENVIRONMENT
              value: "prod"

